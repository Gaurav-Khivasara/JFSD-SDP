package com.klef.jfsd.sdp.controller;

import java.util.HashMap;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.HttpStatus;
import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RestController;

import com.klef.jfsd.sdp.model.ForgotPassword;
import com.klef.jfsd.sdp.service.ForgotPasswordServiceImpl;

import jakarta.servlet.http.HttpServletRequest;

import org.springframework.web.bind.annotation.RequestBody;

@RestController
@RequestMapping("/api/emails/forgot-password")
public class ForgotPasswordController {
	
	@Autowired
	private ForgotPasswordServiceImpl forgotPasswordService;
	
	@PostMapping("/send")
	public ResponseEntity<ForgotPassword> send(@RequestBody ForgotPassword forgotPassword) {
		String msg = forgotPasswordService.sendMail(forgotPassword);
		
		HttpStatus status = (msg.equals("Invalid Email!") || msg.equals("Expired token!")) ? HttpStatus.UNAUTHORIZED :
			(msg.equals("Link already used!") ? HttpStatus.CONFLICT :
				(msg.equals("Expired token!") ? HttpStatus.FORBIDDEN : HttpStatus.OK));

		return new ResponseEntity<>(forgotPassword, status);
	}
	
	@GetMapping("")
	public ResponseEntity<HashMap<String, String>> resetForm(@RequestParam String email, @RequestParam String token) {
		HashMap map = new HashMap<>();
		map.put("email", email);
		map.put("token", token);
		return new ResponseEntity<>(map, HttpStatus.OK);
	}
	
	@PostMapping("/verify")
	public String resetPassword(HttpServletRequest request) {
		String email = request.getParameter("email");
		String token = request.getRequestURI();
		String password = request.getParameter("password");
		
		System.out.println("email: " + email + ", token: " + token + ", password: " + password);
		
		String str = request.getParameter("1") + request.getParameter("2");
		return """
				<h2>%s</h2
				""".formatted(str);
	}
	
}
