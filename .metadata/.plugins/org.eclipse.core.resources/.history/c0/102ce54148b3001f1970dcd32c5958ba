package com.klef.jfsd.sdp.service;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.security.core.userdetails.UserDetailsService;
import org.springframework.security.core.userdetails.UsernameNotFoundException;
import org.springframework.stereotype.Service;

import com.klef.jfsd.sdp.model.User;
import com.klef.jfsd.sdp.repository.UserRepo;

@Service
public class UserDetailsImpl {
	
	@Autowired
	private UserRepo userRepo;

	public User loadUserByUserId(String userId) throws UsernameNotFoundException {
		return userRepo.findByUserId(Long.valueOf(userId));
	}
	
}
